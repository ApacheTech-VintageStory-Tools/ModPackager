{
  "Serilog": {
    "MinimumLevel": "Information"
  },

  "SmartAssembly": {
    "Location": "C:\\Program Files\\Red Gate\\SmartAssembly 8\\SmartAssembly.com"
  },

  "Packager": {
    "VersioningStyle": "Static",

    "FileNames": {
      "SmartAssembly": "{AssemblyDir}\\{AssemblyName}.saproj",
      "ArchiveName": "{AssemblyName}_v{ModVersion}.zip"
    },

    "Directories": {
      "TempDir": "{AssemblyDir}\\.tmp",
      "OutputDir": "{AssemblyDir}\\.release",
      "IncludesDir": "{AssemblyDir}\\_Includes"
    },

    "JunkFiles": [
      "*.pdb",
      "*.deps.json"
    ],

    "CompileTimeOnlyAssemblies": [
      "SmartAssembly.Attributes.dll",
      "JetBrains.Annotation.dll",
      "Newtonsoft.Json.dll"
    ],

    "VanillaDependencies": [
      "Vintagestory.exe",
      "VintagestoryServer.exe",
      "VintagestoryAPI.dll",
      "VintagestoryLib.dll"
    ]
  }
}
